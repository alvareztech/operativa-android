<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
        >

    <LinearLayout
            android:id="@+id/sectionViewGroup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_size"
            android:orientation="vertical">

        <TextView
                android:id="@+id/titleSectionText"
                android:text="@string/app_name"
                style="@style/ListSectionTitle"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/text_color_primary_dark"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_size"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

        <ImageView
                android:id="@+id/iconImage"
                style="@style/Icon.Right"
                android:src="@drawable/ic_action_network_wifi"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"

                    android:textSize="@dimen/text_size_small"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    />

            <TextView
                    android:id="@+id/resultText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textSize="@dimen/text_size_medium"
                    android:fontFamily="sans-serif-light"
                    android:gravity="right|bottom"
                    android:textColor="@color/text_color_primary_dark"

                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="4dp"
                    />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>