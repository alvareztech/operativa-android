<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/window_background</item>
    </style>


    <style name="TitleListItem" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_primary_dark</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DescriptionListItem" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_secondary_dark</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/view_margin</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <!-- Form -->

    <!-- Icon Form -->

    <style name="Icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>

        <item name="android:layout_marginTop">@dimen/icon_margin</item>
        <item name="android:layout_marginBottom">@dimen/icon_margin</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>

        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Icon.Left">
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
    </style>

    <style name="Icon.Right">
        <item name="android:layout_marginRight">@dimen/view_margin</item>
    </style>

    <style name="Icon.Left.NoAlpha">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Icon.Right.NoAlpha">
        <item name="android:background">#fff</item>
    </style>


    <style name="FormText" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:layout_marginBottom">@dimen/view_margin</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>

        <item name="android:gravity">center_vertical</item>

        <item name="android:textColor">@color/text_color_secondary_dark</item>

    </style>

    <style name="FormText.Right">
        <item name="android:layout_marginRight">@dimen/view_margin</item>
    </style>

    <style name="FormText.Left">
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
    </style>

    <style name="FormText.Center">
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
        <item name="android:layout_marginRight">@dimen/view_margin</item>
    </style>

    <!-- Form EditText-->

    <style name="FormEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:layout_marginBottom">@dimen/view_margin</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="FormEditText.Left">
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
    </style>

    <style name="FormEditText.Right">
        <item name="android:layout_marginRight">@dimen/view_margin</item>
    </style>


    <!-- Title Section List -->
    <style name="ListSectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:layout_marginBottom">@dimen/view_margin</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>

        <item name="android:gravity">bottom</item>

        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_color_primary_dark</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>

    </style>

</resources>
